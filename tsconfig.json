{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "outDir": "dist",
        "rootDir": ".",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "typeRoots": [
            "../node_modules/@types"
        ],
        "types": [
            "core-js"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}